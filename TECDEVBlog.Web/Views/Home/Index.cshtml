@model TECDEVBlog.Web.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                TECDev Knowledge Database
            </h1>
            <p class="lead">
                The TECDev Knowledge Database is a blog-style repository website for use by the 
                TEC Equipment application development team. The sites purpose is to act as a knowledge 
                center for TEC Developers to store findings and information that other team members
                may find useful during the development lifecycle.

            </p>
        </div>

        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/160107/pexels-photo-160107.jpeg?auto=compress&cs=tinysrgb&w=400" alt="TECDev Knowledge Database" 
            class="d-block mx-lg-auto img-fluid" width="300"/>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if (Model != null && Model.Tags.Any())
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name

                    </span>
                }
            }

        </div>

    </div>

</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {
                    
                    <div class="mb-3 bg-light box-shadow p-4">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" 
                            class="mb-2 d-block img-fluid" />

                            <h2 class="mb-2">@blogPost.Heading</h2>
                            <p calss="mb-3"> 
                                Author: @blogPost.Author
                                <br />
                                Published Date: @blogPost.PublishedDate.ToShortDateString()
                            </p>

                            <p class="mb-3">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }

                            </p>

                            <p class=" mb-3">@blogPost.ShortDescription</p>

                            <a class="btn btn-dark"
                            asp-area=""
                            asp-controller="Blogs"
                            asp-action="Index"
                            asp-route-urlHandle="@blogPost.UrlHandle"
                            >Read</a>


                    </div>
                }
            }
        </div>

    </div>

</div>
